<% layout('layouts/boilerplate') %>

<main>
  <div class="container">
    <form method="post" action="/updateStock/<%= stock['_id'] %>">
      <div class="mb-3">
        <label for="ticker" class="form-label">Stock Ticker</label>
        <input
          name="ticker"
          value="<%= stock['ticker'] %>"
          type="text"
          class="form-control"
          id="ticker"
        />
      </div>
      <div class="mb-3">
        <label for="company" class="form-label">Company</label>
        <input
          name="company"
          value="<%= stock['company'] %>"
          type="text"
          class="form-control"
          id="company"
        />
      </div>
      <div class="mb-3">
        <label for="positionSize" class="form-label">Position Size</label>
        <input
          name="positionSize"
          value="<%= stock['positionSize'] %>"
          type="text"
          class="form-control"
          id="positionSize"
        />
      </div>
      <div class="mb-3">
        <label for="averageCost" class="form-label">Average Cost</label>
        <input
          name="averageCost"
          value="<%= stock['averageCost'] %>"
          type="text"
          class="form-control"
          id="averageCost"
        />
      </div>
      <button type="submit" class="btn btn-success">Update</button>
    </form>
  </div>
</main>
